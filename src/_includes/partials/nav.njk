{% set navLang = lang or "en" %}
{% set nt = i18n[navLang] or i18n.en %}
{% set navPrefix = "" %}
{% if translations[navLang] %}{% set navPrefix = translations[navLang].prefix %}{% endif %}

<nav class="nav{% if navHero %} nav--hero{% endif %}" role="navigation" aria-label="Main navigation">
  <div class="nav__inner">
    <a href="{% if navLang == 'en' %}/{% else %}/{{ navLang }}/{% endif %}" class="nav__logo" aria-label="Plurality home">Plurality</a>

    <ul class="nav__links">
      <li><a href="{{ navPrefix }}/read/" class="nav__link{% if '/read/' in page.url %} nav__link--active{% endif %}">{{ nt.nav_read }}</a></li>
      <li><a href="{{ navPrefix }}/read/0-1/" class="nav__link{% if '/0-1/' in page.url %} nav__link--active{% endif %}">{{ nt.nav_about }}</a></li>
      <li><a href="{{ site.github }}" class="nav__link" target="_blank" rel="noopener">GitHub</a></li>
      <li><button class="search-toggle" aria-label="Search" id="search-toggle"><svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2.5" stroke-linecap="round" stroke-linejoin="round"><circle cx="11" cy="11" r="7"/><line x1="21" y1="21" x2="16.65" y2="16.65"/></svg></button></li>
      <li><button class="theme-toggle" aria-label="Toggle theme"><svg class="theme-icon theme-icon--moon" width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2.5" stroke-linecap="round" stroke-linejoin="round"><path d="M21 12.79A9 9 0 1 1 11.21 3 7 7 0 0 0 21 12.79z"/></svg><svg class="theme-icon theme-icon--sun" width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2.5" stroke-linecap="round" stroke-linejoin="round"><circle cx="12" cy="12" r="5"/><line x1="12" y1="1" x2="12" y2="3"/><line x1="12" y1="21" x2="12" y2="23"/><line x1="4.22" y1="4.22" x2="5.64" y2="5.64"/><line x1="18.36" y1="18.36" x2="19.78" y2="19.78"/><line x1="1" y1="12" x2="3" y2="12"/><line x1="21" y1="12" x2="23" y2="12"/><line x1="4.22" y1="19.78" x2="5.64" y2="18.36"/><line x1="18.36" y1="5.64" x2="19.78" y2="4.22"/></svg></button></li>
    </ul>

    <button class="nav__hamburger" aria-label="Open menu" aria-expanded="false">
      <span></span>
      <span></span>
      <span></span>
    </button>
  </div>
</nav>

<div class="nav__overlay" role="dialog" aria-label="Mobile menu">
  <a href="{{ navPrefix }}/read/" class="nav__overlay-link">{{ nt.nav_read }}</a>
  <a href="{{ navPrefix }}/read/0-1/" class="nav__overlay-link">{{ nt.nav_about }}</a>
  <a href="{{ site.github }}" class="nav__overlay-link" target="_blank" rel="noopener">GitHub</a>
  <button class="search-toggle" aria-label="Search" id="search-toggle-mobile"><svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2.5" stroke-linecap="round" stroke-linejoin="round"><circle cx="11" cy="11" r="7"/><line x1="21" y1="21" x2="16.65" y2="16.65"/></svg></button>
  <button class="theme-toggle" aria-label="Toggle theme"><svg class="theme-icon theme-icon--moon" width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2.5" stroke-linecap="round" stroke-linejoin="round"><path d="M21 12.79A9 9 0 1 1 11.21 3 7 7 0 0 0 21 12.79z"/></svg><svg class="theme-icon theme-icon--sun" width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2.5" stroke-linecap="round" stroke-linejoin="round"><circle cx="12" cy="12" r="5"/><line x1="12" y1="1" x2="12" y2="3"/><line x1="12" y1="21" x2="12" y2="23"/><line x1="4.22" y1="4.22" x2="5.64" y2="5.64"/><line x1="18.36" y1="18.36" x2="19.78" y2="19.78"/><line x1="1" y1="12" x2="3" y2="12"/><line x1="21" y1="12" x2="23" y2="12"/><line x1="4.22" y1="19.78" x2="5.64" y2="18.36"/><line x1="18.36" y1="5.64" x2="19.78" y2="4.22"/></svg></button>
</div>

<div class="search-overlay" id="search-overlay" role="dialog" aria-label="Search" aria-hidden="true">
  <div class="search-overlay__inner">
<div id="search-container"></div>
  </div>
</div>

{% set indexTerms = bookIndex[navLang] or bookIndex.en %}
{% if indexTerms | length %}
<datalist id="search-suggestions">
  {% for term in indexTerms %}<option value="{{ term }}">
  {% endfor %}
</datalist>
{% endif %}
