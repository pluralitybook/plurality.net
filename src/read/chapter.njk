---
pagination:
  data: flatChapters
  size: 1
  alias: chapter
permalink: "{{ chapter.url }}"
layout: reader.njk
eleventyComputed:
  title: "{{ chapter.title }}"
  chapterLabel: "{{ chapter.sectionTitle }} · {{ chapter.number }}"
  meta: ""
  lang: "{{ chapter.lang }}"
  prevUrl: "{{ chapter.prevChapter.url if chapter.prevChapter else '' }}"
  prevTitle: "{{ chapter.prevChapter.title if chapter.prevChapter else '' }}"
  nextUrl: "{{ chapter.nextChapter.url if chapter.nextChapter else '' }}"
  nextTitle: "{{ chapter.nextChapter.title if chapter.nextChapter else '' }}"
---

{% if chapter.id == "0-0" and chapter.localEndorsements %}
  {% set langEndorsements = endorsements[chapter.lang] %}
  {% for item in langEndorsements %}
    <blockquote>
      <p>{{ item.quote }}</p>
      <p>— {{ item.author }}{% if item.title %}, {{ item.title }}{% endif %}</p>
    </blockquote>
  {% endfor %}
{% else %}
  {% fetchcontent chapter.githubUrl %}
{% endif %}
